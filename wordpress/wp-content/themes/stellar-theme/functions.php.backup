/**
 * Add custom body classes
 */
function stellar_body_classes($classes) {
    if (is_front_page()) {
        $classes[] = 'home-page';
    }
    
    if (is_page_template('page-about.php')) {
        $classes[] = 'about-page';
    }
    
    return $classes;
}
